{% extends 'base.html.twig' %}

{% block title %}FriendlyJob - API
{% endblock %}

{% block stylesheets %} 
	<link href="https://fonts.googleapis.com/css?family=Work+Sans:100,200,300,400,700,800" rel="stylesheet">
	<link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
